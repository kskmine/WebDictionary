@model List<Word>
@{
    ViewData["Title"] = "Home Page";
}
@*@{ Layout = null;}*@
<div>
    <div style="margin-bottom:5px" >
        <a asp-action="Index" class="btn btn-success" >Anasayfa</a>
        <a asp-action="CreateWord" class="btn btn-success" >Yeni Kelime Ekle</a>     
        <a asp-action="Index" asp-route-order="Words" style="margin-left:650px" class="btn btn-success">Kelime</a> 
        <a asp-action="Index" asp-route-order="Description" class="btn btn-success" >Anlamı</a>
    </div>
</div>

<div>
    <form asp-action="Index" method="get">
        <input type="text" class="form-control" id="searchBox" name="searchBox" placeholder="Aranacak Kelime..." />
        <input type="submit" style="margin-top:5px" value="Ara" />
    </form>
</div>


<div>
    <h2>Kelime ve Anlamı</h2>

    <table>
        <tr>
            <th>ID</th>
            <th>WORD</th>
            <th>DESCRIPTION</th>
            <th style="text-align:center ">SİL-GÜNCELLE </th>
        </tr>
        @{
            foreach (Word word in Model)
            {
                <tr>
                    <td>@word.Id</td>
                    <td>@word.Words</td>
                    <td>@word.Description</td>
                    <td>
                        <div class="text-center">
                            <a onclick="return eminMisiniz(@word.Id)" asp-route-id="@word.Id" asp-action="Delete">Sil</a>
                            <a asp-route-id="@word.Id" asp-action="CreateWord">Düzenle</a>
                            </div>
                    </td>
                </tr>
            }
        }


    </table>


    <script>
        function eminMisiniz(id) {
            //alert(id+"nolu kaydı silmek istediğinizden emin misiniz?");
            var dialogResult = confirm(id + "nolu kaydı silmek istediğinizden emin misiniz?");
            console.log(dialogResult);
            return dialogResult;
        }
    </script>

    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #e3d4fd;
            text-align: left;
            padding: 8px;
        }

         tr:nth-child(even) {
            background-color: #e3d4fd;
        }
    </style>

